<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <environments>Default</environments>
    <formulas>
        <name>FirstNameTruncated</name>
        <dataType>String</dataType>
        <expression>IF(CONTAINS({!$Record.FirstName}, &quot; &quot;),
LEFT({!$Record.FirstName},
FIND(&quot; &quot;, {!$Record.FirstName}) - 1), {!$Record.FirstName})</expression>
    </formulas>
    <formulas>
        <name>LastNameTruncated</name>
        <dataType>String</dataType>
        <expression>IF(
FIND(&apos; &apos;, TRIM({!$Record.LastName})) != 0,
RIGHT(
TRIM({!$Record.LastName}),
FIND(&apos; &apos;, REVERSE(TRIM({!$Record.LastName}))) - 1
),
TRIM({!$Record.LastName})
)</expression>
    </formulas>
    <interviewLabel>Scheduled - Fix Contact Names from Tencia {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Scheduled - Fix Contact Names from Tencia</label>
    <processMetadataValues>
